//==============================================================================
// The shader simply assigns appropriate part of the texture to the fragment.
//==============================================================================
// author: dybisz
//------------------------------------------------------------------------------
#version 120

//==============================================================================
// In
//------------------------------------------------------------------------------
varying vec3        v_skyboxTexCoords;

//==============================================================================
// Uniforms
//------------------------------------------------------------------------------
uniform samplerCube u_skyboxTexture;

void main()
{
    gl_FragColor = textureCube(u_skyboxTexture,v_skyboxTexCoords);
}
//==============================================================================
// The shader simply assigns appropriate part of the texture to the fragment.
//==============================================================================
// author: dybisz
//------------------------------------------------------------------------------
#version 330 core

//==============================================================================
// In
//------------------------------------------------------------------------------
in vec3        v_skyboxTexCoords;

//==============================================================================
// Uniforms
//------------------------------------------------------------------------------
uniform samplerCube u_skyboxTexture;

void main()
{
    gl_FragColor = texture(u_skyboxTexture,v_skyboxTexCoords);
}